<style>
div {
  margin: 10px auto;
}

</style>
<% if @user.errors.any? %>
  <p>Invalid input.</p>
    <ul>
      <% for msg in @user.errors.full_messages %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </ul>
<% end %>

<h1>Signup#new</h1>
<%= form_for @user, url: "/signup" do |f| %>
  <div>
    <!-- HALT-DOING -->
    <%= f.label :name, "Your name" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, "Your e-mail" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, "Your password" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Confirm your password" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Create my account" %>
  </div>

<%end%>